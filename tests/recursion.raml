let id : (int -> int) -> (int -> int) =
fun x -> x

let rec id_int : int -> int = 
    fun x -> if x = 0 then
                 x
             else id_int (x-1) +1;;


let rec id_int : int -> int = 
    fun x -> if x <= 0 then
                 x
             else id_int (x-1) +1;;

    

let rec rdwalk lst =
  match lst with
  | [] -> ()
  | p::ps ->
    if Rprob.flip p
    then (Raml.tick 1.; rdwalk (Rprob.create (1,4) :: Rprob.create (2,3) :: ps))
    else (Raml.tick 1.; rdwalk ps)
;;

